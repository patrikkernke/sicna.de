/**
 *
 * Clients component
 *
 */
 
/* component variables */
clients_height = rhythm(15)

/* component definition */
.Clients
    // structure
    position : relative
    z-index  : layer.clients
    height   : clients_height
    overflow : hidden
    // theme-styles
    background-color : color.background
    box-shadow : 0 8px 15px color.shadow

.Clients__client
    // structure
    lost-column : 1/6
    
