/**
 *
 * Cardsgallery component
 *
 */

/* component variables */

/* component definition */
.Cardsgallery > li
    // structure
    lost-waffle : 1/6

.Cardsgallery > li > a
    // structure
    display    : block
    padding    : rhythm(5) 0
    text-align : center
    // theme-style
    color : color.text
    type-family(bold)
    type-family(big)
    text-transform : uppercase
    background-color : color.background
    border-radius : rhythm(1)
    text-decoration : none
    box-shadow : 0 3px 3px lighten(color.shadow, 60%)

.Cardsgallery > li > a:hover
    // theme-style
    background-color : darken(color.background, 5%)
